<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/light_gray</item>
    </style>

    <style name="DialogRightAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_right</item>
        <item name="android:windowExitAnimation">@anim/slide_out_right</item>
    </style>
    <style name="DialogRightAnimationOnlyOut">
        <item name="android:windowExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="DialogSlideAnim">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@style/DialogRightAnimation</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="DialogSlideAnimOnlyOut">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@style/DialogRightAnimationOnlyOut</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="DialogUpAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_top_fade</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom_fade</item>
    </style>
    <style name="DialogStatusAnimation">
        <item name="android:windowExitAnimation">@anim/fade_out_with_duration</item>
    </style>
    <style name="DialogDownAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_down_fast_with_fade</item>
        <item name="android:windowExitAnimation">@anim/slide_up_fast_with_fade</item>
    </style>


    <style name="PhoneAnim">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@style/DialogUpAnimation</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:radius">40dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="DialogSent">
        <item name="android:background">@color/black</item>
        <item name="android:alpha">0.5</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Theme.DoNotDim" parent="android:Theme">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>


