<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:layout_marginBottom="40dp"
    android:layout_alignParentBottom="true"
    android:elevation="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tooltip_background"
        android:id="@+id/bubble"
        android:padding="20dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        >

        <com.gthr.android.view_objects.fTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Creating Invites"
            android:textColor="@color/black"
            custom:typeface="bold"
            android:id="@+id/title"
            android:textSize="17sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="7dp"
            />

        <com.gthr.android.view_objects.fTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/desc"
            android:text="You can create a custom invite here. Or use any of the other suggested invites to get started"
            android:textColor="@color/black"
            custom:typeface="reg"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/title"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            />

        <com.gthr.android.fButton
            android:layout_width="150dp"
            android:layout_height="42dp"
            android:id="@+id/got_it_button"
            android:background="@drawable/rounded_solid_blue"
            android:layout_centerHorizontal="true"
            android:text="@string/got_it_button"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_below="@+id/desc"
            />

    </RelativeLayout>

    <View
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/tooltip_arrow"
        android:rotation="180"
        android:id="@+id/arrow"
        android:layout_below="@id/bubble"
        android:layout_marginTop="-2.2dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="65dp"
        android:layout_alignParentEnd="true"
        />

</RelativeLayout>