<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="27dp"
    android:minWidth="50dp"
    android:background="@drawable/rounded_corners_list_number_grey">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="15dp"
        >

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/invited_grey"
            android:layout_alignParentStart="true"
            android:id="@+id/invited_icon"
            android:layout_centerVertical="true"
            />

        <com.gthr.android.view_objects.fTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_number"
            android:text="66"
            android:textSize="16sp"
            app:minTextSize="16sp"
            android:gravity="center"
            android:layout_toEndOf="@+id/invited_icon"
            android:textColor="@color/light_gray"
            android:maxLines="1"
            android:layout_marginStart="8dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

</RelativeLayout>