<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="22dp"
    android:minWidth="50dp"
    android:background="@drawable/rounded_corners_list_number"
    android:layout_marginTop="4dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        >

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/invited"
            android:layout_alignParentStart="true"
            android:id="@+id/invited_icon"
            android:layout_centerVertical="true"
            />

        <com.gthr.android.view_objects.fTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/list_number"
            android:text="66"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_toRightOf="@+id/invited_icon"
            android:layout_toEndOf="@+id/invited_icon"
            android:textColor="@color/white"
            android:maxLines="1"
            android:layout_marginStart="3dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

</RelativeLayout>