<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout android:layout_width="130dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            >

            <include layout="@layout/component_profile_rounded"
                android:id="@+id/profile_rounded1"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                />

            <include layout="@layout/component_profile_rounded"
                android:id="@+id/profile_rounded2"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/profile_rounded1"
                android:layout_marginEnd="-18dp"
                />

            <include layout="@layout/component_profile_rounded"
                android:id="@+id/profile_rounded3"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/profile_rounded2"
                android:layout_marginEnd="-18dp"
                />

            <include layout="@layout/component_profile_rounded"
                android:id="@+id/profile_rounded4"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/profile_rounded3"
                android:layout_marginEnd="-18dp"
                />

            <include layout="@layout/component_list_number_bubble"
                android:id="@+id/component_list_number_bubble"
                android:layout_height="35dp"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>