<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".activities.OnBoarding.ListInvitationOnBoardingActivity">
    <com.gthr.android.view_objects.fTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        custom:typeface="sbold"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="18sp"
        android:paddingLeft="40dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:paddingRight="40dp"
        android:layout_above="@+id/choice_container"
        android:layout_marginBottom="10dp"
        android:id="@+id/top_title"
        android:text="What's one thing you do with your friends?"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/choice_container"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_corners"
            android:weightSum="3"
            android:id="@+id/content_top">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/get_coffee"
                    android:clickable="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/coffee_icon"
                    android:layout_marginBottom="20dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    />

                <com.gthr.android.view_objects.fTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    custom:typeface="light"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:textSize="15sp"
                    android:layout_below="@+id/get_coffee"
                    android:text="Get Coffee"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/listen_to_music"
                    android:clickable="true"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/music_icon"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    />

                <com.gthr.android.view_objects.fTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    custom:typeface="light"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/listen_to_music"
                    android:text="Listen to Music"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/watch_movies"
                    android:clickable="true"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/movies_icon"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    />

                <com.gthr.android.view_objects.fTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    custom:typeface="light"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_below="@+id/watch_movies"
                    android:text="Watch Movies"/>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_corners"
            android:layout_below="@+id/content_top"
            android:weightSum="3"
            android:id="@+id/content_bottom">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/happy_hour"
                    android:clickable="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/happy_hour_icon"
                    android:layout_marginBottom="20dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    />
                <com.gthr.android.view_objects.fTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    custom:typeface="light"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/happy_hour"
                    android:text="Happy Hour"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/adventure"
                    android:clickable="true"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/adventure_icon"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp" />

                <com.gthr.android.view_objects.fTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    custom:typeface="light"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/adventure"
                    android:text="Adventure"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/dance"
                    android:clickable="true"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/dance_icon"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    />

                <com.gthr.android.view_objects.fTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    custom:typeface="light"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/dance"
                    android:text="Dance"/>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
