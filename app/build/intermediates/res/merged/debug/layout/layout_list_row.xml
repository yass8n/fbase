<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/container">

    <include layout="@layout/component_checkmark_with_text"
        android:id="@+id/component_checkmark_with_text"
        />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_below="@+id/component_checkmark_with_text"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:animateLayoutChanges="true"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:id="@+id/list_details"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <include layout="@layout/component_profile_rounded"
                    android:id="@+id/profile_rounded1"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    />
                <include layout="@layout/component_profile_rounded"
                    android:id="@+id/profile_rounded2"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    />
                <include layout="@layout/component_profile_rounded"
                    android:id="@+id/profile_rounded3"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    />
                <include layout="@layout/component_profile_rounded"
                    android:id="@+id/profile_rounded4"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    />
                <include layout="@layout/component_plus_number_bubble"
                    android:id="@+id/component_plus_number_bubble"
                    android:layout_height="46dp"
                    android:layout_width="46dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    />


            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>