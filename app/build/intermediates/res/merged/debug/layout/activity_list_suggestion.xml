<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/shrunken_view"
            >
            <include layout="@layout/component_list_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/component_list_preview"
                />
        </LinearLayout>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@color/white"
           android:id="@+id/event">
           <com.gthr.android.view_objects.fTextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Create your first list"
               android:textColor="@color/black"
               android:textSize="14dp"
               android:layout_marginTop="5dp"
               android:textStyle="bold"
               android:textAllCaps="true"
               custom:typeface="sbold"
               android:layout_centerHorizontal="true"
               android:id="@+id/text1"
               />
           <com.gthr.android.view_objects.fTextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="What are your friends interested in?"
               android:textColor="@color/light_gray"
               android:textSize="14dp"
               android:layout_marginTop="7dp"
               android:textStyle="bold"
               custom:typeface="light"
               android:layout_centerHorizontal="true"
               android:id="@+id/text2"
               android:layout_below="@+id/text1"
               />
           <com.gthr.android.view_objects.fTextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Select one"
               android:textColor="@color/light_gray"
               android:textSize="14dp"
               android:layout_marginTop="7dp"
               android:textStyle="bold"
               android:id="@+id/text3"
               custom:typeface="light"
               android:layout_centerHorizontal="true"
               android:layout_below="@+id/text2"
               />
           <LinearLayout
               android:layout_below="@+id/text3"
               android:id="@+id/selections"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:weightSum="99"
               android:layout_marginTop="16dp"
               android:layout_marginBottom="8dp"
               android:layout_marginLeft="8dp"
               android:layout_marginStart="8dp"
               android:layout_marginEnd="8dp"
               android:layout_marginRight="8dp">
               <com.gthr.android.view_objects.fTextView
                   android:id="@+id/selection1"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="Geek"
                   android:gravity="center"
                   android:paddingLeft="12dp"
                   android:paddingRight="12dp"
                   android:paddingEnd="12dp"
                   android:paddingStart="12dp"
                   android:paddingBottom="6dp"
                   android:paddingTop="6dp"
                   android:textSize="14sp"
                   android:textColor="@color/dark_text_color"
                   android:background="@drawable/rounded_corner_orange"
                   android:clickable="true"
                   android:layout_weight="33"
                   android:layout_marginLeft="4dp"
                   android:layout_marginStart="4dp"
                   android:layout_marginEnd="4dp"
                   android:layout_marginRight="4dp"
                   />
               <com.gthr.android.view_objects.fTextView
                   android:id="@+id/selection2"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="Adventure"
                   android:gravity="center"
                   android:paddingLeft="12dp"
                   android:paddingRight="12dp"
                   android:paddingEnd="12dp"
                   android:paddingStart="12dp"
                   android:paddingBottom="6dp"
                   android:paddingTop="6dp"
                   android:textSize="14sp"
                   android:textColor="@color/dark_text_color"
                   android:background="@drawable/rounded_corner_purple"
                   android:clickable="true"
                   android:layout_weight="33"
                   android:layout_marginLeft="4dp"
                   android:layout_marginStart="4dp"
                   android:layout_marginEnd="4dp"
                   android:layout_marginRight="4dp"
                   />
               <com.gthr.android.view_objects.fTextView
                   android:id="@+id/selection3"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="Just Chill"
                   android:gravity="center"
                   android:paddingLeft="12dp"
                   android:paddingRight="12dp"
                   android:paddingEnd="12dp"
                   android:paddingStart="12dp"
                   android:paddingBottom="6dp"
                   android:paddingTop="6dp"
                   android:textSize="14sp"
                   android:textColor="@color/dark_text_color"
                   android:background="@drawable/rounded_corner_green"
                   android:clickable="true"
                   android:layout_weight="33"
                   android:layout_marginLeft="4dp"
                   android:layout_marginStart="4dp"
                   android:layout_marginEnd="4dp"
                   android:layout_marginRight="4dp"
                   />

           </LinearLayout>
           <RelativeLayout
               android:layout_width="match_parent"
               android:id="@+id/other"
               android:layout_below="@+id/selections"
               android:layout_height="wrap_content"
               android:layout_marginLeft="16dp"
               android:layout_marginStart="16dp"
               android:layout_marginEnd="16dp"
               android:layout_marginRight="16dp">
               <com.gthr.android.view_objects.fTextView
                   android:id="@+id/text_other"
                   android:layout_alignParentStart="true"
                   android:layout_alignParentLeft="true"
                   android:layout_centerVertical="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Other:"
                   android:textSize="14sp"
                   android:textColor="@color/dark_text_color"
                   android:layout_marginLeft="4dp"
                   android:layout_marginStart="4dp"
                   android:layout_marginEnd="4dp"
                   android:layout_marginRight="4dp"
                   />
               <com.gthr.android.view_objects.fEditText
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/list_title"
                   android:layout_toRightOf="@+id/text_other"
                   />
               <com.gthr.android.view_objects.fTextView
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:id="@+id/chars_remaining"
                   android:text="@string/other"
                   android:textColor="@color/white"
                   android:textSize="13dp"
                   android:layout_marginTop="7dp"
                   android:gravity="right"
                   android:alpha="0.6"
                   android:layout_weight="2"
                   android:layout_marginRight="10dp"
                   android:layout_marginEnd="10dp"
                   android:visibility="gone"
                   />
               <com.gthr.android.view_objects.ViewPagers.ApplicationViewPager
                   xmlns:android="http://schemas.android.com/apk/res/android"
                   android:id="@+id/pager"
                   android:visibility="gone"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent" />


           </RelativeLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="1px"
               android:layout_below="@+id/other"
               android:background="@color/light_gray"/>

       </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:id="@+id/select_friends_tab"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"

            >
            <com.gthr.android.view_objects.fTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/select_friendz"
                android:textColor="@color/light_gray"
                android:textSize="14dp"
                android:layout_marginTop="7dp"
                android:textStyle="bold"
                android:gravity="left|center_vertical"
                android:alpha="1"
                android:layout_weight="1"
                custom:typeface="sbold"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                android:id="@+id/select_friends_text"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/white"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:id="@+id/select_friends_arrow"
                android:layout_centerVertical="true" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include layout="@layout/component_contact_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </RelativeLayout>


        <!-- Contains the whole layout end-->
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:id="@+id/faded"
        android:visibility="gone"
        android:onClick="doNothing"
        android:alpha=".5" />
    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:background="@drawable/progress_bar"
        android:progressDrawable="@drawable/progress_bar" />
    <!--<ImageView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="300dp"-->
    <!--android:background="@color/white"-->
    <!--android:animateLayoutChanges="true"-->
    <!--android:layout_alignParentBottom="true"-->
    <!--android:id="@+id/calendar_background"-->
    <!--android:visibility="gone"-->
    <!--android:alpha="0.3"-->
    <!--/>-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/calendar_holder"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:animateLayoutChanges="true"
        >
        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:id="@+id/ex"
            android:layout_alignParentTop="true"
            android:background="@drawable/ex"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            />
        <CalendarView
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:id="@+id/calendar"
            android:background="@color/white"
            android:animateLayoutChanges="true"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:background="@drawable/progress_bar"
        android:progressDrawable="@drawable/progress_bar" />

</RelativeLayout>
