<?xml version="1.0" encoding="utf-8"?>
<com.gthr.android.view_objects.AnimationRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:id="@+id/event"
    android:background="@color/orange"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    android:clickable="true">

    <com.gthr.android.view_objects.ViewPagers.ApplicationViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/event_headers"
        >
        <com.gthr.android.view_objects.fTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/chars_remaining"
            android:text="@string/other"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="13dp"
            android:layout_marginTop="7dp"
            android:gravity="right"
            android:alpha="0.6"
            android:layout_weight="2"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/action_done"
        android:clickable="true"
        android:visibility="gone"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ex"
            android:id="@+id/action_done_icon"
            android:clickable="false"
            android:focusable="false" />

    </RelativeLayout>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="left"
        android:id="@+id/back"
        android:paddingTop="4.4dp"
        android:clickable="true"
        android:visibility="gone"
        />
    <RelativeLayout
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/kabob"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="4.4dp"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/dots"
            android:layout_width="8.8dp"
            android:layout_height="18dp"
            android:gravity="top"
            android:src="@drawable/kebab"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:animateLayoutChanges="false"
            android:layout_marginTop="2dp"
            />

    </RelativeLayout>
    <com.gthr.android.view_objects.fTextView
        android:id="@+id/share_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/share"
        android:layout_gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="14sp"
        android:textColor="@color/dark_text_color"
        android:background="@drawable/rounded_corners"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:visibility="gone"
        />

    <com.gthr.android.view_objects.fEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_title"
        android:textColor="@color/white"
        android:hint="@string/invite_list_title"
        android:textSize="23sp"
        android:textColorHint="@color/faded_hint"
        android:imeOptions="actionDone"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:inputType="textMultiLine|textNoSuggestions"
        android:maxLength="40"
        android:gravity="center"
        android:background="@null"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />

</com.gthr.android.view_objects.AnimationRelativeLayout>
