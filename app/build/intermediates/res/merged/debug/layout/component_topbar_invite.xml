<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/topbar"
    android:clickable="false">

    <ImageView
        android:id="@+id/suggested_invite_image"
        android:layout_alignParentEnd="true"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:visibility="gone"
        android:layout_marginEnd="50dp"
        android:alpha=".4"
        android:scaleType="fitEnd"
        />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/action_done"
        android:clickable="true"
        android:layout_alignParentEnd="true"
        >

        <ImageView
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/ex"
            android:layout_centerVertical="true"
            android:layout_marginEnd="17dp"
            android:layout_marginStart="17dp"
            android:id="@+id/action_done_image"
            android:elevation="2dp"
            />

    </RelativeLayout>

    <com.gthr.android.view_objects.fTextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/topbar_text"
        android:text="@string/create_invite"
        android:clickable="false"
        android:textSize="16sp"
        custom:typeface="sbold"
        android:textColor="@color/white"
        android:gravity="center"
        android:textAllCaps="true"
        android:layout_marginStart="17dp"
        />

    <com.gthr.android.view_objects.fTextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/topbar_text_more_padding"
        android:text="@string/add_friends_header"
        android:clickable="false"
        android:textSize="16sp"
        custom:typeface="sbold"
        android:textColor="@color/white"
        android:gravity="center"
        android:textAllCaps="true"
        android:layout_marginStart="45dp"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/back"
        >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/down_arrow"
            android:src="@drawable/back_white"
            android:layout_marginStart="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            />

    </RelativeLayout>

</RelativeLayout>
